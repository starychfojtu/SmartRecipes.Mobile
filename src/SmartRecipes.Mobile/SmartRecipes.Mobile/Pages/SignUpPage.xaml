<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    Style="{StaticResource page}"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    x:Class="SmartRecipes.Mobile.Pages.SignUpPage"
    xmlns:controls="clr-namespace:SmartRecipes.Mobile.Controls;assembly=SmartRecipes.Mobile">
    <ContentPage.Content>
         <Grid
            IsClippedToBounds="true">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="16" />
            </Grid.RowDefinitions>

            <!-- Background image -->
            <ffimageloading:CachedImage
                x:Name="BackgroundImage"
                Grid.RowSpan="3"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Aspect="AspectFit"
                Source="blurbg"/>

            <!-- Heading -->
            <StackLayout
                Grid.Row="0"
                Padding="32"
                Margin="8"
                VerticalOptions="CenterAndExpand">
                <Label 
                    Text="Smart Recipes" 
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource lightHeading}"/>
                <Label 
                    Text="Organize cooking" 
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource lightSubHeading}"/> 
                <ActivityIndicator
                    x:Name="Loader"
                    IsRunning="false"
                    Color="{StaticResource accentColor}"/>
            </StackLayout>

            <!-- Sign in form -->
            <StackLayout
                x:Name="FormLayout"
                Grid.Row="1"
                Padding="32"
                Margin="8"
                VerticalOptions="CenterAndExpand">

                <controls:ValidatableEntry
                    Placeholder="Email"
                    x:Name="EmailEntry"
                    Margin="0, 0, 0, 4"
                    VerticalOptions="FillAndExpand"
                    Style="{StaticResource entry}"/>
                <controls:ValidatableEntry 
                    Placeholder="Password"
                    x:Name="PasswordEntry"
                    IsPassword="true"
                    VerticalOptions="FillAndExpand"
                    Style="{StaticResource entry}"/>
                <Button 
                    Text="Sign Up"
                    x:Name="SignUpButton"
                    VerticalOptions="FillAndExpand"
                    Style="{StaticResource primaryButton}"/>
                <Button 
                    Text="Already have an account ? Sign in !" 
                    VerticalOptions="FillAndExpand"
                    x:Name="SignInButton"
                    Style="{StaticResource linkButton}"/>
            </StackLayout>
            
        </Grid>
    </ContentPage.Content>
</ContentPage>